<div class="container-fluid d-flex justify-content-center align-items-center" id="createWordForm">
  <h1>Add a Word to the Dictionary</h1>
  <form>
    <div class="form-group">
      <input type="text" class="form-control" id="word" placeholder="Word">
    </div>
    <div class="form-group">
      <input type="text" class="form-control" id="definition" placeholder="Definition">
    </div>
    <button type="submit" class="btn btn-secondary" id="submitBtn">Submit</button>
  </form>
</div>
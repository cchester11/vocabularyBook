<div class="container-fluid d-flex justify-content-center align-items-stretch" id="pages">
      <div class="row w-75" id="wordsListDiv">
            {{#each words as |word|}}
            <div class="card-body col-12 border border-warning rounded bg-success h-25 m-auto">
                  <h5 class="card-title font-weight-light word" id="{{word.id}}">{{word.word}}</h5>
                  <p class="card-text definition" id="{{word.id}}">{{word.definition}}</p>
            </div>
            {{/each}}
      </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<div class="container-fluid d-flex justify-content-center align-items-stretch" id="pages">
  <div class="row w-75">
    {{#each words as |word|}}
    <div class="card-body col-12 border border-warning rounded bg-success h-25 m-auto">
      <h5 class="card-title font-weight-light">{{word.word}}</figure>
        <p class="card-text">{{word.definition}}</p>
        <button class="button btn-warning btn-sm">Edit</button>
        <button class="button btn-danger btn-sm">Delete</button>
    </div>
    {{/each}}
  </div>
</div>
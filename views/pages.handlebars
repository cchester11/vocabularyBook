<div class="container-fluid d-flex justify-content-center align-items-stretch" id="pages">
  <div class="row w-75" id="wordsListDiv">
    {{#each words as |word|}}
    <div class="card-body col-12 border border-warning rounded h-25 m-auto p-5">
        <h5 class="card-title font-weight-light word" id="{{word.id}}">{{word.word}}</h5>
        <p class="card-text definition" id="{{word.id}}">{{word.definition}}</p>
        <button class="btn btn-sm editBtn pages-button" id="{{word.id}}" data-count="{{word.id}}">Edit</button>
        <button class="btn btn-sm saveBtn pages-button" id="{{word.id}}" data-count="{{word.id}}">Save</button>
        <button class="btn btn-sm deleteBtn pages-button" id="{{word.id}}" data-count="{{word.id}}" onclick="deleteWord(this.id)">Delete</button>
    </div>
    {{/each}}
  </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="/javascript/pages.js"></script>
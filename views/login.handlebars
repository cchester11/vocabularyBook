<div class="container-fluid d-flex flex-column justify-content-center justify-content-around align-items-center" id="login-page">
      <form class="login-form">
            <h1>Login</h1>
            <div class="form-group">
                  <label for="username-login">username:</label>
                  <input type="text" class="form-control" id="username-login" />
            </div>
            <div class="form-group">
                  <label for="password-login">password:</label>
                  <input type="password" class="form-control" id="password-login" />
            </div>
            <div>
                  <button type="submit" class="btn btn-primary">login</button>
            </div>
      </form>

      <form class="signup-form">
            <h1>Sign Up</h1>
            <div class="form-group">
                  <label for="username-signup">username:</label>
                  <input type="text" class="form-control" id="username-signup" />
            </div>
            <div class="form-group">
                  <label for="password-signup">password:</label>
                  <input type="password" class="form-control" id="password-signup" />
            </div>
            <div>
                  <button type="submit" class="btn btn-primary">signup</button>
            </div>
      </form>
</div>

<script src="/javascript/login_signup.js"></script>
{{!-- credentials grabbed here and sent to api route --}}
<div class="container-fluid d-flex flex-column justify-content-center justify-content-around align-items-center"
      id="login-page">

      {{!-- error container on sign up or login --}}
      <div id="error-container" class="error-container">
            <div class="error-sub-container">
                  <div class="card-text">Invalid username or password</div>
                  <button class="btn badge badge-pill login-page-error-button">Okay</button>
            </div>
      </div>

      {{!-- login form --}}
      <form class="login-form">
            <h1>Login</h1>
            <div class="form-group">
                  <label for="username-login">username:</label>
                  <input type="text" class="form-control" id="username-login" />
            </div>
            <div class="form-group">
                  <label for="password-login">password:</label>
                  <input type="password" class="form-control" id="password-login" />
            </div>
            <div>
                  <button type="submit" class="login-page-btn btn btn-sm mt-1">login</button>
            </div>
      </form>

      {{!-- sign up --}}
      <form class="signup-form">
            <h1>Sign Up</h1>
            <div class="form-group">
                  <label for="username-signup">username:</label>
                  <input type="text" class="form-control" id="username-signup" />
            </div>
            <div class="form-group">
                  <label for="password-signup">password:</label>
                  <input type="password" class="form-control" id="password-signup" />
            </div>
            <div>
                  <button type="submit" class="login-page-btn btn  btn-sm mt-1">signup</button>
            </div>
      </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="/javascript/login_signup.js"></script>